{
  "name": "@deskpro-apps/simple-mdm",
  "title": "SimpleMDM",
  "description": "My Deskpro app",
  "version": "0.0.2",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "user_sidebar", "entrypoint": "index.html" }],
  "entityAssociations": {
    "linkedSimpleMDMDevice": {
      "title": "Linked SimpleMDM Device",
      "entity": "person",
      "type": "external_id"
    }
  },
  "settings": {
    "api_key": {
      "title": "API Key",
      "description": "",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 10
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://a.simplemdm.com/api/v1/.*",
        "methods": ["GET"],
        "timeout": 20
      }
    ]
  }
}
